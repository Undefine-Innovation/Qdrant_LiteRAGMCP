# =============================================================================
# Qdrant MCP RAG 环境配置示例文件
# =============================================================================
# 复制此文件为 .env 并根据您的环境修改配置值
# 
# 环境配置文件结构：
# - .env.example: 主要配置示例（此文件）
# - .env.development.example: 开发环境配置示例
# - .env.production.example: 生产环境配置示例
# - .env.test.example: 测试环境配置示例
# =============================================================================

# =============================================================================
# 应用基础配置
# =============================================================================

# 应用运行环境 (development, production, test)
NODE_ENV=development

# 服务器端口
PORT=3000

# =============================================================================
# 数据库配置
# =============================================================================

# SQLite 数据库文件路径
DATABASE_PATH=./data/app.db

# 数据库连接池配置
DB_CONNECTION_LIMIT=10
DB_CONNECTION_TIMEOUT=30000

# =============================================================================
# Qdrant 向量数据库配置
# =============================================================================

# Qdrant 服务地址
QDRANT_URL=http://localhost:6333

# Qdrant 集合名称
QDRANT_COLLECTION_NAME=qdrant_rag

# Qdrant API 密钥（如果需要）
# QDRANT_API_KEY=your_qdrant_api_key

# =============================================================================
# OpenAI 配置
# =============================================================================

# OpenAI API 密钥
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI API 基础 URL
OPENAI_BASE_URL=https://api.openai.com

# OpenAI 模型
OPENAI_MODEL=gpt-3.5-turbo

# =============================================================================
# 嵌入模型配置
# =============================================================================

# 嵌入模型
EMBEDDING_MODEL=text-embedding-ada-002

# 嵌入向量维度
EMBEDDING_DIM=1536

# 嵌入批次大小
EMBEDDING_BATCH_SIZE=200

# =============================================================================
# 日志配置
# =============================================================================

# 日志级别 (debug, info, warn, error)
LOG_LEVEL=info

# 启用 traceID 功能
ENABLE_TRACE_ID=true

# 启用模块 TAG 功能
ENABLE_MODULE_TAG=true

# 启用性能日志功能
ENABLE_PERFORMANCE_LOGGING=true

# 慢查询阈值（毫秒）
LOG_SLOW_QUERIES_THRESHOLD=1000

# 启用文件日志
ENABLE_FILE_LOGGING=true

# 日志文件路径
LOG_FILE_PATH=./logs/app.log

# 启用控制台日志
ENABLE_CONSOLE_LOGGING=true

# 启用结构化日志（JSON格式）
ENABLE_STRUCTURED_LOGGING=true

# 启用日志轮转
ENABLE_LOG_ROTATION=true

# 单个日志文件最大大小（字节）
MAX_LOG_FILE_SIZE=10485760

# 保留的日志文件数量
MAX_LOG_FILES=5

# 启用日志压缩
ENABLE_COMPRESSION=true

# 日志文件日期模式
DATE_PATTERN=YYYY-MM-DD

# 日志文件最大大小（支持单位：m, g）
MAX_SIZE=20m

# 日志文件保留时间（支持单位：d, 数量）
MAX_FILES=14d

# 启用压缩归档
ZIPPED_ARCHIVE=true

# =============================================================================
# 前端配置
# =============================================================================

# API 基础 URL
VITE_API_BASE_URL=http://localhost:3000/api

# 应用标题
VITE_APP_TITLE=Qdrant MCP RAG

# 应用版本
VITE_APP_VERSION=1.0.0

# 功能开关
VITE_ENABLE_DEBUG=false
VITE_ENABLE_ANALYTICS=false

# =============================================================================
# 测试配置
# =============================================================================

# Jest 工作器 ID
JEST_WORKER_ID=1

# 测试超时时间（毫秒）
TEST_TIMEOUT=30000

# 测试数据库重置
TEST_DB_RESET=true

# =============================================================================
# 安全配置
# =============================================================================

# JWT 密钥
JWT_SECRET=your_jwt_secret_here

# JWT 过期时间
JWT_EXPIRES_IN=24h

# CORS 允许的源
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# 性能配置
# =============================================================================

# 最大并发请求数
MAX_CONCURRENT_REQUESTS=100

# 请求超时时间（毫秒）
REQUEST_TIMEOUT=30000

# 缓存过期时间（秒）
CACHE_TTL=3600

# =============================================================================
# 监控配置
# =============================================================================

# 启用健康检查
ENABLE_HEALTH_CHECK=true

# 健康检查间隔（毫秒）
HEALTH_CHECK_INTERVAL=30000

# 启用指标收集
ENABLE_METRICS=true

# 指标收集间隔（毫秒）
METRICS_INTERVAL=60000
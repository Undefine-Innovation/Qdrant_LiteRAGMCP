{
  "name": "qdrant",
  "description": "Tool spec for Qdrant vector DB operations",
  "type": "vector-db",
  "input": {
    "points": {
      "type": "array",
      "items": { "type": "object", "properties": { "id": { "type": "string" }, "vector": { "type": "array", "items": { "type": "number" } }, "payload": { "type": "object" } } }
    }
  },
  "output": {
    "result": { "type": "string" }
  },
  "config": {
    "collection": { "type": "string" },
    "batchSize": { "type": "integer", "default": 100 }
  }
}

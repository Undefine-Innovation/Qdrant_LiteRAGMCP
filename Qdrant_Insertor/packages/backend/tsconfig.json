{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../../shared/*"],
      "@backend/*": ["./"],
      "@domain/*": ["./src/domain/*"],
      "@application/*": ["./src/application/*"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@api/*": ["./src/api/*"],
      "@config/*": ["./src/infrastructure/config/*"],
      "@logging/*": ["./src/infrastructure/logging/*"],
      "@di/*": ["./src/infrastructure/di/*"],
      "@lifecycle/*": ["./src/infrastructure/lifecycle/*"],
      "@scheduling/*": ["./src/infrastructure/scheduling/*"],
      "@middleware/*": ["./src/api/middleware/*", "./src/middlewares/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/infrastructure/database/repositories/*.d.ts",
    // exclude generated code since it's produced by tools and may not follow project lint/ts rules
    "src/generated",
    "src/generated/**"
  ]
}
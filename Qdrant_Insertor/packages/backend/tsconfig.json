{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../shared/*"],
      "@domain/*": ["./src/domain/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
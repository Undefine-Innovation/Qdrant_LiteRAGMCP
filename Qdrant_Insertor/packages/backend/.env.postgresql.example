# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration - PostgreSQL
DB_TYPE=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DATABASE=qdrant_rag
POSTGRES_SSL=false

# PostgreSQL Connection Pool Configuration
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_MIN_CONNECTIONS=5
POSTGRES_CONNECTION_TIMEOUT=10000
POSTGRES_IDLE_TIMEOUT=300000
POSTGRES_MAX_LIFETIME=3600000

# PostgreSQL Performance Configuration
POSTGRES_ENABLE_QUERY_CACHE=true
POSTGRES_QUERY_CACHE_SIZE=1000
POSTGRES_QUERY_CACHE_DURATION=300000
POSTGRES_SLOW_QUERY_THRESHOLD=1000

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_NAME=qdrant_rag

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_BATCH_SIZE=200
EMBEDDING_DIM=1536

# Logging Configuration
LOG_LEVEL=info
LOG_ENABLE_TRACE_ID=true
LOG_ENABLE_MODULE_TAG=true
LOG_ENABLE_PERFORMANCE=true
LOG_SLOW_QUERIES_THRESHOLD=1000

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GLOBAL_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_GLOBAL_BURST=100
RATE_LIMIT_IP_REQUESTS_PER_MINUTE=100
RATE_LIMIT_IP_BURST=20
RATE_LIMIT_USER_REQUESTS_PER_MINUTE=200
RATE_LIMIT_USER_BURST=50
RATE_LIMIT_PATH_REQUESTS_PER_MINUTE=50
RATE_LIMIT_PATH_BURST=10
RATE_LIMIT_SEARCH_REQUESTS_PER_MINUTE=30
RATE_LIMIT_SEARCH_BURST=5
RATE_LIMIT_UPLOAD_REQUESTS_PER_MINUTE=10
RATE_LIMIT_UPLOAD_BURST=2
RATE_LIMIT_METRICS_ENABLED=true
RATE_LIMIT_METRICS_RETENTION_HOURS=24
RATE_LIMIT_CLEANUP_INTERVAL_MINUTES=60
RATE_LIMIT_INCLUDE_HEADERS=true
RATE_LIMIT_SKIP_HEALTH_CHECK=true
RATE_LIMIT_SKIP_OPTIONS=true
RATE_LIMIT_WHITELIST_IPS=127.0.0.1,::1
RATE_LIMIT_WHITELIST_USERS=admin,system

# Database Migration Configuration
DB_AUTO_MIGRATE=true
DB_MIGRATION_TIMEOUT=300000
DB_MIGRATION_RETRY_ATTEMPTS=3
DB_MIGRATION_RETRY_DELAY=5000

# Database Performance Monitoring
DB_PERFORMANCE_MONITORING_ENABLED=true
DB_PERFORMANCE_MONITORING_INTERVAL=60000
DB_PERFORMANCE_HISTORY_SIZE=100
DB_PERFORMANCE_SLOW_QUERY_THRESHOLD=1000
DB_PERFORMANCE_CONNECTION_THRESHOLD=5000
DB_PERFORMANCE_MEMORY_THRESHOLD=1073741824
DB_PERFORMANCE_DISK_THRESHOLD=10737418240
DB_PERFORMANCE_CACHE_THRESHOLD=0.8

# Database Backup Configuration
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=86400000
DB_BACKUP_RETENTION_DAYS=7
DB_BACKUP_PATH=./backups
DB_BACKUP_COMPRESSION=true

# Database Health Check Configuration
DB_HEALTH_CHECK_ENABLED=true
DB_HEALTH_CHECK_INTERVAL=30000
DB_HEALTH_CHECK_TIMEOUT=5000

# Database Optimization Configuration
DB_AUTO_OPTIMIZE=false
DB_OPTIMIZE_INTERVAL=604800000
DB_OPTIMIZE_VACUUM=true
DB_OPTIMIZE_ANALYZE=true
DB_OPTIMIZE_REINDEX=true

# Database SSL Configuration (for production)
POSTGRES_SSL_MODE=prefer
POSTGRES_SSL_CERT_PATH=
POSTGRES_SSL_KEY_PATH=
POSTGRES_SSL_CA_PATH=
POSTGRES_SSL_CRL_PATH=

# Database Replication Configuration (optional)
POSTGRES_REPLICATION_ENABLED=false
POSTGRES_REPLICATION_HOST=
POSTGRES_REPLICATION_PORT=5432
POSTGRES_REPLICATION_USER=
POSTGRES_REPLICATION_PASSWORD=
POSTGRES_REPLICATION_DATABASE=

# Database High Availability Configuration (optional)
POSTGRES_HA_ENABLED=false
POSTGRES_HA_PRIMARY_HOST=
POSTGRES_HA_PRIMARY_PORT=5432
POSTGRES_HA_STANDBY_HOSTS=
POSTGRES_HA_STANDBY_PORTS=